<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:padding="10dp"
        >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/op_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:civ_border_color="@color/red"
            app:civ_border_width="2dp"
            app:civ_shadow="false"
            app:civ_shadow_radius="2dp"
            app:civ_shadow_color="@color/winColor"
            android:src="@mipmap/ic_launcher_round"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/op_textView_profileUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#551414"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/op_imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/op_textView_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/op_imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView_op_email" />

        <TextView
            android:id="@+id/op_textView_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:background="@color/btnBackgroundColor"
            android:padding="3dp"
            android:text="Add new post"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/op_imageView"
            app:layout_constraintTop_toBottomOf="@+id/op_textView_status" />

        <TextView
            android:id="@+id/textView_op_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/op_imageView"
            app:layout_constraintTop_toBottomOf="@+id/op_textView_profileUsername" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/op_recycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ProgressBar
            android:id="@+id/op_progress_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</LinearLayout>